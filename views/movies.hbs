<div class='movies'>
  <h1>Ironhack Cinema</h1>
  <p>Click on the movie to check the showtimes !</p>
  <div class='movies-wrapper'>
    {{#each movies}}
      <div class='movie-card'>
        <img src={{this.image}} alt='' />
        <div class='card-content'>
          <h2>{{this.title}}</h2>
          <a href='movies/{{this.id}}'>See more</a>
        </div>
      </div>
    {{/each}}
  </div>
</div>