<div class='movie'>
  <img src={{movie.image}} alt='' />
  <div class='movie-content'>
    <a href='/movies'>Go back</a>
    <h2>{{movie.title}}</h2>
    <h3>Director: {{movie.director}}</h3>
    <h3>Stars</h3>
    <ul class='movie-stars'>
      {{#each movie.stars}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
    <p>{{movie.description}}</p>
    <ul class='movie-showimes'>
      {{#each movie.showtimes}}
        <li> {{this}} |</li>
      {{/each}}
    </ul>
  </div>
</div>